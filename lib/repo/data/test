function iosBrowser(apk) {
//  if (Browser.iPhone || Browser.iPad) {
	  $.ajax({
		//url: "https://smart.kepco.co.kr:8443/KepcoSPSV/jsp/appdown/appDownLog.jsp",
		url: "https://www.e-kepco.co.kr/KepcoSPSV/appdown/appDownLog.jsp?apkNm="+apk,
		type: "GET",
		dataType:"jsonp",
		success: function(data){
			//alert("It is iPhone browser");   ..... https://www.e-kepco.co.kr/KepcoSPSV/downFile/KepcoAppDown
			//var url = "itms-services://?action=download-manifest&url=https://smart.kepco.co.kr:8443/KepcoAppDown/SmartKpeco.plist";
			var url = "itms-services://?action=download-manifest&url=https://www.e-kepco.co.kr/KepcoSPSV/downFile/KepcoAppDown/SmartKpeco.plist";
			document.location.href=url;
		}
		,error: function(xhr) {console.log(xhr);}
	});
// }
//  else{
//		alert("아이폰/패드 전용으로 안드로이드에서는 설치되지않습니다.");
//  }
}
