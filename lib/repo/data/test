
var downloadUrl = "https://smart.kepco.co.kr:8443/KepcoAppDown/";
function download(apkNm, apk){
  $.ajax({
	url: "https://www.e-kepco.co.kr/KepcoSPSV/appdown/appDownLog.jsp?apkNm="+apk,
	type: "GET",
	dataType:"jsonp",
	success: function(data){window.location.href=downloadUrl+apkNm;}
	,error: function(xhr) {console.log(xhr);}
  });
}
function message(){
	alert("준비중입니다.");
}
function tabDisplay2(position, itemCnt, class1, class2, div_handle){
	var div_handle = false;
	if(tabDisplay2.arguments.length <5) div_handle=true;
	else div_handle=div_handle;

	for(i=0; i<itemCnt; i++) {
		if(i==(position-1)) {
			document.getElementById("tab_"+(i+1)).className =  class1;
		} else {
			document.getElementById("tab_"+(i+1)).className = class2;
		}
	}
}
function setDisplayById(item, setValue) {
	var item = document.getElementById(item);

	if(item!=null){
		if(setValue == true) item.style.display="";
		else if(setValue == false) item.style.display="none";
	}
}
